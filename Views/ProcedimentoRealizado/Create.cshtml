@model ProjetoFinal.Models.ProcedimentoRealizado

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>ProcedimentoRealizado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label"></label>
                <select asp-for="CidadeId" class ="form-control" asp-items="ViewBag.CidadeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoProcedimentoId" class="control-label"></label>
                <select asp-for="TipoProcedimentoId" class ="form-control" asp-items="ViewBag.TipoProcedimentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoColaboradorId" class="control-label"></label>
                <select asp-for="TipoColaboradorId" class ="form-control" asp-items="ViewBag.TipoColaboradorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocalRealizacaoId" class="control-label"></label>
                <select asp-for="LocalRealizacaoId" class ="form-control" asp-items="ViewBag.LocalRealizacaoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataRealizacao" class="control-label"></label>
                <input asp-for="DataRealizacao" class="form-control" />
                <span asp-validation-for="DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacaoRealizacao" class="control-label"></label>
                <input asp-for="ObservacaoRealizacao" class="form-control" />
                <span asp-validation-for="ObservacaoRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
